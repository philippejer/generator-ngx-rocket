{
  "name": "<%= props.projectName %>",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "build": "npm run env -s && ng build --aot --prod",
    "start": "ng serve --proxy-config proxy.conf.js",
    "lint": "ng lint --type-check && stylelint \"src/**/*.scss\" --syntax scss && htmlhint \"src\" --config .htmlhintrc",
    "test": "ng test",
    "test:ci": "npm run lint -s && ng test --single-run --code-coverage",
    "e2e": "ng e2e",
    "translations:extract": "ngx-translate-extract --input ./src --output ./src/translations/template.json --format=json --clean -sort --marker extract",
    "docs": "hads ./docs -o",
    "env": "env2json npm_package_version -o src/environments/.env.json",
<% if (props.target !== 'web') { -%>
    "prepare": "npm run build && cordova prepare",
    "package": "cordova build --device",
    "run": "cordova run",
    "cordova": "cordova",
<% } -%>
    "generate": "ng generate"
  },
  "dependencies": {
    "@angular/animations": "^4.1.0",
    "@angular/common": "^4.1.0",
    "@angular/compiler": "^4.1.0",
    "@angular/core": "^4.1.0",
    "@angular/forms": "^4.1.0",
    "@angular/http": "^4.1.0",
    "@angular/platform-browser": "^4.1.0",
    "@angular/platform-browser-dynamic": "^4.1.0",
    "@angular/router": "^4.1.0",
    "@ngx-translate/core": "^7.0.0",
<% if (props.target !== 'web') { -%>
    "@ionic-native/core": "^3.9.2",
    "@ionic-native/splash-screen": "^3.9.2",
    "@ionic-native/status-bar": "^3.9.2",
    "sw-toolbox": "^3.6.0",
<% } -%>
<% if (props.ui === 'ionic') { -%>
    "ionic-angular": "^3.2.1",
    "ionicons": "^3.0.0",
<% } else if (props.ui === 'bootstrap') { -%>
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.25",
    "bootstrap": "4.0.0-alpha.6",
    "font-awesome": "^4.7.0",
<% } -%>
    "core-js": "^2.4.1",
    "lodash": "^4.17.4",
    "rxjs": "^5.4.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
<% if (props.target !== 'web') { -%>
    "cordova": "^7.0.0",
<% } -%>
    "@angular/cli": "^1.1.3",
    "@angular/compiler-cli": "^4.1.0",
    "@angular/language-service": "^4.0.0",
    "@biesbjerg/ngx-translate-extract": "^2.3.1",
    "@types/jasmine": "^2.5.52",
    "@types/jasminewd2": "^2.0.2",
    "@types/lodash": "^4.14.52",
    "@types/node": "^8.0.0",
    "codelyzer": "~3.1.1",
    "env2json": "^1.0.0",
    "hads": "^1.3.4",
    "htmlhint": "^0.9.13",
    "https-proxy-agent": "^1.0.0",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "^4.1.0",
    "karma": "~1.7.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "^1.1.0",
    "karma-junit-reporter": "^1.2.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "phantomjs-prebuilt": "^2.1.14",
    "protractor": "~5.1.2",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^16.0.0",
    "ts-node": "^3.1.0",
    "tslint": "~5.4.3",
    "typescript": "~2.3.3"
  }
}
